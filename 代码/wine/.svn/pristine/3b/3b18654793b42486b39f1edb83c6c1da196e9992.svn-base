@hcarset "utf-8";


.header{width: 100%; height: 150px; background: #3b294b;position: relative; z-index: 9;}
.header_wrap{width: 1100px; margin: 0 auto;}
.top{text-align: right; padding-top: 15px;}
.top span{display: inline-block;width: 0; height: 0; border-width: 5px; border-style: dashed dashed dashed solid; border-color:transparent transparent transparent #bea992; position: relative; overflow:hidden;vertical-align:middle;}
.top a{display: inline-block; color: #bea992; font-size: 14px;}

.logo{ width: 112px; height: 112px; float: left;position: relative; bottom: -46px; z-index: 99; margin-left: 40px;}
.nav{width: 840px; float: left; background: url(../images/nav.jpg) no-repeat 0 0;}
.nav li{width: 168px; height: 114px; float: left;}
.nav li a{display: block; width: 168px; height: 114px; text-indent: -9999px;}
.nav .about a:hover,
.nav .about a.cur{background: url(../images/nav.jpg) no-repeat 0 -114px;}
.nav .baike a:hover,
.nav .baike a.cur{background: url(../images/nav.jpg) no-repeat -168px -114px;}
.nav .goods a:hover,
.nav .goods a.cur{background: url(../images/nav.jpg) no-repeat -336px -114px;}
.nav .history a:hover,
.nav .history a.cur{background: url(../images/nav.jpg) no-repeat -504px -114px;}
.nav .contact a:hover,
.nav .contact a.cur{background: url(../images/nav.jpg) no-repeat -672px -114px;}

.nav ul li div.subnav{width: 518px; height: 76px; padding-top: 14px; background: url(../images/subnav_bg.png) no-repeat 0 0; overflow: hidden; position: relative; top: -16px;z-index: 9999; display: none;}
.nav ul li div.subnav a{ display: inline; text-indent: 0; color: #000; font: normal 16px/68px Arial; padding:6px 10px; margin: 0 36px; background: none;}
.nav ul li div.subnav a:hover{ background: none; border-bottom: solid 3px #dac691; text-decoration: none;}


.bottom{width: 1100px; margin: 40px auto; overflow: hidden;}
.bottom a{display:block; float: left; width: 350px; text-decoration: none; margin-right: 18px;}
.bottom a:last-child{margin-right: 0;}
.bottom a.last{margin-right: 0;}
.box{width: 350px; border: solid 1px #cdcdcd; float: left; }
.box h2{width:350px; height: 54px; font: normal 18px/44px "Microsoft Yahei"; text-align: center; color: #222; background: url(../images/title_bg.jpg) no-repeat;}
.bottom a:hover .box{border-color: #d6c57d;}
.footer{width: 1100px; margin: 0 auto; text-align: center; padding-bottom: 40px;}
.footer p{color: #d6c57d; line-height: 24px; text-align: center; font-family:"Times New Roman"; letter-spacing: 4px;}