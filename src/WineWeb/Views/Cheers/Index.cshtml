@model List<WineWeb.Models.Cheers>

@{
    ViewBag.Title = "Index";
}

<div class="main_wrap">
    	<div class="sitenav"><a href="index.html">首页</a>&gt<span>品酒人生</span></div>
		<h1><strong>品酒人生</strong><br /><span>Cheers! Santé! Cin cin! Salud!</span></h1>
	
		<div class="mainlist">
            @foreach (var item in Model)
            {
                <div class="listbox">
				    <a href="@item.Link" @*target="_blank"*@><img src="@Url.Content(item.thum)"></a>
				    <h3><a href="@item.Link" @*target="_blank"*@>@item.title1</a></h3>
				    <p>@item.title2</p>
				    <a href="@item.Link" class="more">&gt;&nbsp;&nbsp;阅读全文</a>
			    </div>
            }
 
		</div>
		<!--pager start-->
	     @Html.Partial("_Pagination", (WineWeb.Models.Pagination)ViewBag.Pagination)	 
    	<!--pager end-->
	</div>

