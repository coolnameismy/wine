@model WineWeb.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";   
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "ProductManage", FormMethod.Post, new { enctype = "multipart/form-data", id = "ProductManage" }))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Product</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.title1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title1)
            @Html.ValidationMessageFor(model => model.title1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.title2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title2)
            @Html.ValidationMessageFor(model => model.title2)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.title3,"导读")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.title3, new { rows = "3", cols = "80", style = "width:99%"}) 
            @Html.ValidationMessageFor(model => model.title2)
        </div>

       <div class="editor-label">
                @Html.LabelFor(model => model.thum, "缩略图   最佳：182 x 330像素")
                @Html.ValidationMessageFor(model => model.thum)
            </div>
            <div class="editor-field">
                @if (!string.IsNullOrEmpty(Model.thum))
                {
                    <p>@Html.DisplayFor(model => model.thum)  </p>
                    <p class="hidden">@Html.EditorFor(model => model.thum)</p>
            
                }
                else
                {
                    <p>暂无图片 </p>
                }
                <input id="thum" type="file" name="thum" value="@Model.thum"/>
            </div>

       <div class="editor-label">
            @Html.LabelFor(model => model.content)
        </div>
       <div class="editor-field">
            @Html.TextAreaFor(model => model.content, new { rows = "10", cols = "80", style = "width:99%", id = "editor1", name = "editor1" })  
            <script type="text/javascript">
                var editor = CKEDITOR.replace('editor1');
                CKFinder.SetupCKEditor(editor, '/ckfinder/');
             </script> 
            @Html.ValidationMessageFor(model => model.content)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.date)
            @Html.ValidationMessageFor(model => model.date)
        </div>

       <div class="editor-label">
            @Html.LabelFor(model => model.categoryId, "新闻分类")
        </div>
        <div class="editor-field">
            @Html.DropDownList("categoryId", String.Empty)
            @Html.ValidationMessageFor(model => model.categoryId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
